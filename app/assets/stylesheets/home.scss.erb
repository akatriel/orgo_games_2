@mixin mediaQuery(){
  @media only screen and (min-device-width : 320px) and (max-device-width : 690px) {
    width:100%;
    height:auto;
    float:none;
    margin-right: auto;
    margin-left: auto;
  } 
}
.jumbotron {
	// background: linear-gradient(to bottom, red, #FF5000);
	background-image: url(<%= asset_path 'chemistry_wallpaper.jpg'%>);
	background-size: cover;
	background-repeat: no-repeat;
	opacity: .8;
	h1 {
		font-size: 33px;
		color:#FF5000;
	}
	h2 {
		font-size: 23px;
		color: #fff;
	}
	p {
		color: #272727;
	}
	padding:2%;
}
#myCarousel {
	padding:2%;
	float:left;
    height:auto;
    width:65%;
    @include mediaQuery();
    max-height: 100vh;
	.item{
		margin-left: auto;
		margin-right: auto;
		height:600px;
		width: auto;
		position:relative;
		img{
			position: absolute;
			top:50%;
			left:50%;
			transform: translate(-50%, -50%);
			height:380px;
			width:auto;
		}
	}

	.carousel-control.left, .carousel-control.right {
	    background-image: none !important;
	}
	.carousel-indicators {
      top:2%;
    }
}
.info_section {
	margin-top:2%;
	float:left;
	padding:2%;
	width: 30%;
	@include mediaQuery();
	background: #272727;
	color:#fff;
	border-radius:10px;
}